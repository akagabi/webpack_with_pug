# inspiration configs:
# https://github.com/babel/babel/blob/master/.editorconfig
# https://github.com/django/django/blob/master/.editorconfig
# https://github.com/nodejs/node/blob/master/.editorconfig
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 119

# Use 2 spaces for the HTML files
[*.html]
indent_size = 2

# Markdown use whitespace for semantics
[*.{md,markdown}]
trim_trailing_whitespace = false

# The JSON files contain newlines inconsistently
[*.{js,json,css,scss,yml,pug}]
indent_style = space
indent_size = 2
insert_final_newline = ignore

[**/admin/js/vendor/**]
indent_style = ignore
indent_size = ignore

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab

# Batch files use tabs for indentation
[*.bat]
indent_style = tab
